
<style>
    input[type='submit'], button, [aria-label] {
        cursor: pointer;
    }

    #spoiler {
        display: none;
    }
    table {
        width: 100%;
        max-width: 500px;
    }
</style>
<form action="javascript:void(0);" method="POST" onsubmit="app.Add()">
    <input type="text" id="add-name" placeholder="New staff">
    <input type="submit" value="Add">
</form>

<div id="spoiler">
    <form action="javascript:void(0);" method="POST" id="saveEdit">
        <input type="text" id="edit-name">
        <input type="submit" value="Edit" /> <a onclick="CloseInput()" aria-label="Close">&#10006;</a>
    </form>
</div>

<p id="counter"></p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th style="width:1px;"></th>
            <th style="width:1px;"></th>
        </tr>
    </thead>
    <tbody id="staffs"></tbody>
</table>

<script>
    var app = new function () {

        this.el = document.getElementById('staffs');

        this.staffs = ['France', 'Germany', 'England', 'Spain', 'Belgium', 'Italy', 'Portugal', 'Irland', 'Luxembourg'];

        this.Count = function (data) {
            var el = document.getElementById('counter');
            var name = 'staff';

            if (data) {
                if (data > 1) {
                    name = 'staffs';
                }
                el.innerHTML = data + ' ' + name;
            } else {
                el.innerHTML = 'No ' + name;
            }
        };

        this.FetchAll = function () {
            var data = '';

            if (this.staffs.length > 0) {
                for (i = 0; i < this.staffs.length; i++) {
                    data += '<tr>';
                    data += '<td>' + this.staffs[i] + '</td>';
                    data += '<td><button onclick="app.Edit(' + i + ')">Edit</button></td>';
                    data += '<td><button onclick="app.Delete(' + i + ')">Delete</button></td>';
                    data += '</tr>';
                }
            }

            this.Count(this.staffs.length);
            return this.el.innerHTML = data;
        };

        this.Add = function () {
            el = document.getElementById('add-name');
            // Get the value
            var staff = el.value;

            if (staff) {
                // Add the new value
                this.staffs.push(staff.trim());
                // Reset input value
                el.value = '';
                // Dislay the new list
                this.FetchAll();
            }
        };

        this.Edit = function (item) {
            var el = document.getElementById('edit-name');
            // Display value in the field
            el.value = this.staffs[item];
            // Display fields
            document.getElementById('spoiler').style.display = 'block';
            self = this;

            document.getElementById('saveEdit').onsubmit = function () {
                // Get value
                var staff = el.value;

                if (staff) {
                    // Edit value
                    self.staffs.splice(item, 1, staff.trim());
                    // Display the new list
                    self.FetchAll();
                    // Hide fields
                    CloseInput();
                }
            }
        };

        this.Delete = function (item) {
            // Delete the current row
            this.staffs.splice(item, 1);
            // Display the new list
            this.FetchAll();
        };

    }

    app.FetchAll();

    function CloseInput() {
        document.getElementById('spoiler').style.display = 'none';
    }
</script>